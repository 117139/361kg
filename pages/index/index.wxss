.index_box{
  width: 750rpx;
  background-color: #fff;
  margin-top: 165rpx;
  box-sizing: border-box;
}
.index_scroll{
	width: 750rpx;
	white-space: nowrap;
	height: 75rpx;
	border-bottom: 1px solid #EEEEEE;
	padding: 0 15rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 999;
}
.index_tab{
  display: inline-flex;
	white-space:nowrap;
	font-size: 30rpx!important;
	justify-content: center;
