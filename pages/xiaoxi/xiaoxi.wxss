/* pages/xiaoxi/xiaoxi.wxss */
page,.container{
  background: #fff;
}
.xx_list{
	width: 100%;
	padding: 32rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	background-color: #fff;
	border-bottom: 1px solid #eee;
}
.xx_li_tit{
	font-size:30rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:rgba(51,51,51,1);
	padding-left: 18rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
.xx_li_tit:before{
	content: '';
	display: inline-block;
	width:6rpx;
	height:31rpx;
	background:rgba(244,178,0,1);
	border-radius:3px;
	position: relative;
	top: 4rpx;
	left: -12rpx;
	margin-left: -6rpx;
}
.li_inr_box{
	width: 100%;
	display: flex;
	flex-direction: row-reverse;
	margin-top: 35rpx;
	margin-bottom: 35rpx;
}
.li_inr{
	width:578rpx;
	/* height:116rpx; */
	background:rgba(247,247,247,1);
	border-radius:10px;
	padding: 26rpx 23rpx 28rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	font-size:26rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:36rpx;
}
.li_time{
	display: flex;
	justify-content: space-between;
	font-size:26rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:rgba(153,153,153,1);
}