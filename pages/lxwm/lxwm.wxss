page,.container{
  background: #fff;
}
.lxwm_box1{
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.lxwm_b1{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding-top: 100rpx;
  padding-bottom: 80rpx;
}
.lxwm_tit{
  font-size:60rpx;
  font-family:Arial;
  font-weight:bold;
  color:rgba(244,178,0,1);
  margin-bottom: 20rpx;
}
.lxwm_jj{
  font-size:26rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
}
.lxwm_b2{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  height: 134rpx;

}
.lx_b2_msg{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.lx_msg1{
